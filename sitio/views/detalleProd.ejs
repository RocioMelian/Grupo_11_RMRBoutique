<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs')  %> <!-- HEAD -->
  <body>
    <%- include('./partials/header.ejs')  %> <!-- HEADER -->

    
      <div class="container">
        <section class="principal-detalle">
          <div class="row detalle">

            <div class="contenido-detalle">
              <div class="contenido text-left">
                <div class="row deta">
                  <div class="col-12 titulo">
                    <h2><%= title %> </h2>
                  </div>
                    <div class="col-12 col-lg-7">
                      <figure class="imgdetalle">
                        <img src="/images/ropa/<%= producto.image %>" alt=""><a href=""></a>
                    </figure>
                    <p class="descrip"><%= producto.description %> Talle <%= producto.talle %> </p>
                    </div>
                    <div class="col-12 col-lg-5 datos">
                        <h3 class="nombredeta">
                          <%= producto.name %>
                        </h3>
                        <strike>$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></strike> <span><strong> <%= producto.discount %>  % OFF</strong></span>
                        <h2>
                          $<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %> 
                        </h2>

                                <p><i class="fas fa-credit-card mr-3 my-4 dibu"></i>Pagá en 12 cuotas sin interés</p>
                                <p><i class="fas fa-store mr-3 my-4 dibu"></i>Retiro gratis en el local</p>
                               
                                <button class="buttondeta">Agregar al carrito</button>
                                <button class="buttondeta">Comprar ahora</button>

                                <% if (user.category == "Admin") { %>
                                <div class="editar-eliminar">
                                  <form action="/products/editarProd/<%= producto.id %> " method="GET">
                                <a href="/products/editarProd/<%= producto.id %> " class="editar"><button class="btn btn-outline-light" ><svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg></button></a>
                              </form>
                              <form action="/products/delete/<%= producto.id %>?_method=DELETE"
                                method="POST">
                                
                                <a href="" class="basura"><button class="btn btn-outline-light" type="submit"><svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                </svg></button></a>
                              </form>
                              <% } %>
                              </div>
                              </div>
                </div>
            </div>
            </div>
            
          </div>
        </section>
      </div>
     
      <%- include('./partials/footer.ejs')  %> <!-- FOOTER -->
</body>
</html>