<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs')  %> <!-- HEAD -->
  <body>
    <%- include('./partials/header.ejs')  %> <!-- HEADER -->

    
    <%- include('./partials/banner.ejs')  %> <!-- BANNER -->

<div class="container-fluid">
  <div class="row">
      <div class="col-12 titulo">
        <h1>RMЯ BOUTIQUE</h1>
        </div>

        <% productos.forEach(producto => { %>
          <% if(producto.discount < 30 ) { %> 
    <div class="col-3 col-sm-12 col-md-6 col-lg-3 producto2">
      <a href=/products/detalle/<%= producto.id %> ><img src="/images/ropa/<%= producto.image %>" alt=""></a><i class="precioproducto">
          $<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></i><h3 class="descuentoproducto"> <% if (producto.discount != 0) { %>
          <span><%= producto.discount %>%OFF</span>
        <% } %></h3>
      <a href=""><i class="nombreproducto"><%= producto.name %></i></a>
    </div>
    <% } %> 
    <% }) %>
  </div>
</div>

