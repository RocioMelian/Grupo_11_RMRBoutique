<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs')  %> <!-- HEAD -->
  <body>
    <%- include('./partials/header.ejs')  %> <!-- HEADER -->

    <div class="container">
        <section class="principal-detalle">
          <div class="row detalle">
            <div class="contenido-detalle">
              <div class="contenido text-left">
                <div class="row deta">
            
              <div class="col-12 titulo">
                <h4><%= title %></h4>
             
             
                <br>
              </div>
              
    
    
              <div class="contenido">


               
                <div class="tab-content" id="myTabContent">
    
                  <div class="tab-pane fade show active p-4" id="datos" role="tabpanel" aria-labelledby="home-tab">
                   
                        <form action="/users/updateProfile/<%= usuario.id %> ?_method=PUT" method="POST"
                          enctype="multipart/form-data" id="editUser">
                          <div class="form-row">
                            <div class="col-12 col-md-4 mt-3 d-flex flex-column align-items-center">
                            
                              
                              <img src="/images/avatar_users/<%= usuario.avatar %> " class="avatarImg" alt="avatar" width="75%"
                                style="object-fit: cover; object-position: top;">
                             
                              <div class="form-group w-105">
                                <small class="text-danger" id="errorImagen"><%= (typeof avatar != 'undefined')?avatar: "" %>
                                </small>
                                <input type="file" class="form-control" id="avatarImput" name="avatar" value="<%= (typeof old != 'undefined' && old.avatar)?old.avatar: usuario.avatar %>">
                              </div>
                            </div>
                            <div class="col-12 col-md-8 ">
                              <div class="form-row mt-2">
                                <div class="form-group col-12 col-md-6 ">
                                  <label for="inputNombre">Nombre</label>
                                  <small
                                  class="text-danger" id="errorNombre"><%= (typeof errors != 'undefined' && errors.first_name)?errors.first_name.msg: "" %>
                                  </small>
                                  <input type="text" name="first_name" class="form-control <%= (typeof old != 'undefined' && old.first_name)?"is-valid":(typeof errors != 'undefined' && errors.first_name)?"is-invalid": ""  %>" id="inputNombre"
                                    value="<%= (typeof old != 'undefined' && old.first_name)?old.first_name: usuario.first_name %> " >
                                </div>
                                <div class="form-group col-12 col-md-6">
                                  <label for="inputApellido">Apellido</label>
                                  <small
                                  class="text-danger" id="errorApellido"><%= (typeof errors != 'undefined' && errors.last_name)?errors.last_name.msg: "" %>
                                  </small>
                                  <input type="text" name="last_name" class="form-control <%= (typeof old != 'undefined' && old.last_name)?"is-valid":(typeof errors != 'undefined' && errors.last_name)?"is-invalid": ""  %>" id="inputApellido"
                                    value="<%= (typeof old != 'undefined' && old.last_name)?old.last_name: usuario.last_name %>" >
                                </div>
                                <div class="form-group col-12 col-md-6">
                                  <label for="imputEmail">Email</label>
                                  
                                  <input disabled type="email" name="email" class="form-control" id="imputEmail"
                                    value="<%= usuario.email %>">
                                </div>
                               
                                
                              </div>
                              <div class="d-md-flex justify-content-end mt-5">
                                <button type="button" class="btn-sm btn-secondary m-1"><a href="/" class="text-light">Salir
                                    sin
                                    guardar</a></button>
                                <button type="submit" class="btn-sm btn-primary m-1">Actualizar datos</button>
                              </div>
                            </div>
                          </div>
                        </form>
                    
                        <div class="col-12 col-md-4 d-flex justify-content-center">
                          <form action="/users/delete/<%= usuario.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn-sm btn-danger">Darse de baja</button>
                          </form>
                        </div>
    
                      </div>
                 
    
    
                  <div class="tab-pane fade  " id="productos" role="tabpanel" aria-labelledby="profile-tab">
    
                    <div class="row principal p-4">
    
                      <div class="col-12 col-md-4 col-xl-3">
    
                        <div class="contenido">
    
                        </div>
                      </div>
    
                    </div>
                  </div>
                </div>
              </div>
                        </div>

                      </div>
            </div>
          </div>
          </div>
        </section>
      </div>

<%- include('./partials/footer.ejs')  %> <!-- FOOTER -->
  </body>
</html>
